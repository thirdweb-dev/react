{
  "name": "@thirdweb-dev/react",
  "version": "2.0.5-0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:thirdweb-dev/react.git"
  },
  "author": "thirdweb engineering",
  "license": "Apache-2.0",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "browser": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "scripts": {
    "build:lib": "tsup --env.NODE_ENV production --minify --format esm,cjs",
    "lint": "eslint src/",
    "fix": "eslint src/ --fix",
    "genrate-types": "tsc",
    "extract-api": "api-extractor run --local",
    "generate:md-docs": "yarn api-documenter markdown -i ./temp -o ./docs",
    "build": "yarn build:lib && yarn genrate-types && yarn extract-api && yarn generate:md-docs",
    "test": "yarn build && yarn test-only",
    "test:watch": "vitest watch",
    "test-only": "vitest run"
  },
  "sideEffects:": false,
  "devDependencies": {
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@microsoft/tsdoc": "^0.14.1",
    "@swc/core": "^1.2.147",
    "@thirdweb-dev/sdk": "^2.0.30",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/mime": "^2.0.3",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-inclusive-language": "^2.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "ethers": "^5.6.1",
    "prettier": "^2.5.1",
    "react": "^17.0.0",
    "tsup": "^5.11.13",
    "typescript": "^4.6.2",
    "vitest": "^0.9.3"
  },
  "dependencies": {
    "mime": "^3.0.0",
    "react-cool-dimensions": "^2.0.7",
    "swr": "^1.2.2",
    "tiny-invariant": "^1.2.0",
    "wagmi": "0.2.26"
  },
  "peerDependencies": {
    "@thirdweb-dev/sdk": "^2.0.15",
    "ethers": "^5",
    "react": "^17 || ^18"
  },
  "resolutions": {
    "ansi-regex": "^6.0.1",
    "typescript": "^4.6.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
